# Example environment variables for local development
# Copy this file to .env and fill in actual values
# DO NOT commit .env to version control

# ============================================================================
# Database Provider Configuration
# ============================================================================
# Valid values: postgresql, dynamodb
# Default: postgresql
#
# For PostgreSQL: Use the configuration below (default)
# For DynamoDB: Set DATABASE_PROVIDER=dynamodb and configure DynamoDB section
# ============================================================================
DATABASE_PROVIDER=postgresql

# ============================================================================
# PostgreSQL Database Configuration
# ============================================================================
# Used when DATABASE_PROVIDER=postgresql
# These values work with the docker-compose.yml PostgreSQL service
# ============================================================================
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_URL=jdbc:postgresql://localhost:5432/idp_db

# ============================================================================
# DynamoDB Configuration
# ============================================================================
# Used when DATABASE_PROVIDER=dynamodb
# Uncomment and configure these when using DynamoDB
#
# For local development with DynamoDB Local:
#   1. Start DynamoDB Local: docker run -d -p 8000:8000 amazon/dynamodb-local
#   2. Uncomment DYNAMODB_ENDPOINT below
#   3. Set DATABASE_PROVIDER=dynamodb
#
# For AWS production:
#   1. Set DYNAMODB_REGION to your AWS region
#   2. Use IAM roles (recommended) or set AWS credentials
#   3. Set DATABASE_PROVIDER=dynamodb
# ============================================================================
# DYNAMODB_REGION=us-east-1
# DYNAMODB_ENDPOINT=http://localhost:8000  # For local DynamoDB Local only
# DYNAMODB_TABLE_PREFIX=idp
# DYNAMODB_AUTO_CREATE_TABLES=true
# DYNAMODB_READ_CAPACITY=5
# DYNAMODB_WRITE_CAPACITY=5

# AWS Credentials (optional - use IAM roles in production)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# DynamoDB Logging
# AWS_SDK_LOG_LEVEL=WARN
# DYNAMODB_LOG_LEVEL=INFO

# HTTP Configuration
HTTP_PORT=8082
CORS_ORIGINS=http://localhost:8082,http://localhost:8083,https://localhost:8443,http://localhost:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_SQL=false
LOG_SQL_LEVEL=WARN

# Azure Entra ID (Azure AD) Configuration
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# OAuth2-Proxy Configuration
# Generate with: openssl rand -base64 32
OAUTH2_PROXY_COOKIE_SECRET=your-32-char-base64-encoded-secret-here

# Domain Configuration - Update with your actual domain
DOMAIN=your-domain.com